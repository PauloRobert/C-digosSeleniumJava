package lendoXlsx.xlsx;

import java.io.File;
import java.io.IOException;

import org.apache.poi.openxml4j.exceptions.InvalidFormatException;
import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

public class ReadExcel {

	public static void main(String[] args) throws IOException, InvalidFormatException {

		// Indicando o caminho da pasta
		File CaminhoArquivo = new File("tools\\cnpj.xlx");

		if (CaminhoArquivo.exists() == false) {
			System.out.println("######### ERRO \"######### \n");
			System.out.println("O Arquivo: " + CaminhoArquivo.getName() + " Não existe ou não esta nesta pasta! \n");
			System.out.println("######### ERRO \"######### \n");

		} else {

			System.out.println("O arquivo existe");

		}
		// Criando a planilha
		XSSFWorkbook Planilha = new XSSFWorkbook(CaminhoArquivo);

		// Indicando qual sheet irá ser lida, pode ser por numero ou nome
		XSSFSheet sheet = Planilha.getSheetAt(0);

		// Contando a quantidade de linhas
		int QuantidadeDeLinhas = sheet.getLastRowNum();
		System.out.println("Qaunt. de LInhas: " + QuantidadeDeLinhas);

		for (int i = 1; i <= QuantidadeDeLinhas; i++) {

			// Imprimindo os valores das colunas A e Coluna B getcell 0 e 1
			System.out.println(sheet.getRow(i).getCell(0) + " - " + sheet.getRow(i).getCell(1));

		}

		// Fechando a plnailha
		Planilha.close();

	}

}
